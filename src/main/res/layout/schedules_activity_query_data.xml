<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etQueryName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40dp"
        android:hint="请填入查询的项目名称"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/etQueryName"
        android:id="@+id/tvItemSumTime"
        android:hint="花费的总时间"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40dp" />

    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/rvCommonRs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvItemSumTime" />
</androidx.constraintlayout.widget.ConstraintLayout>
