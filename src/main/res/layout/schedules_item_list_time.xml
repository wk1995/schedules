<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clScheduleItem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d120dp"
    android:background="@android:color/holo_red_dark"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/d20dp"
        android:gravity="center"
        android:textSize="@dimen/s20sp"
        android:padding="@dimen/d10dp"
        android:id="@+id/tvCompleteStatus"
        android:layout_width="@dimen/d120dp"
        android:layout_height="@dimen/d50dp"
        android:visibility="gone"
        tools:text="@string/common_str_complete"/>
    <TextView
        android:layout_marginEnd="@dimen/d20dp"
        android:layout_marginStart="@dimen/d20dp"
        android:layout_width="0dp"
        android:textSize="@dimen/s20sp"
        android:id="@+id/tvScheduleItemName"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Java"/>
    <TextView
        android:id="@+id/tvScheduleItemTime"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_2B2A2A"
        app:layout_constraintStart_toStartOf="@id/tvScheduleItemName"
        app:layout_constraintBottom_toBottomOf="@id/tvCompleteStatus"
        app:layout_constraintTop_toBottomOf="@id/tvScheduleItemName"
        tools:text="01:00:03"/>
</androidx.constraintlayout.widget.ConstraintLayout>